<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lbx.xviewdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".circular.activitydemo.FirstActivity"
            android:configChanges="keyboardHidden|keyboard|orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name=".circular.activitydemo.CircularRevealActivity"
            android:configChanges="keyboardHidden|keyboard|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/CircularRevealAnimTheme" />
        <activity
            android:name=".circular.viewdemo.CircularButtonActivity"
            android:configChanges="keyboardHidden|keyboard|orientation"
            android:screenOrientation="portrait" />

    </application>

</manifest>